<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="admin">

    <select id="selectProdKey" resultType="string">
        select 'p' || to_char(sysdate, 'yymmdd') || lpad(seq_product.nextval, 4, '0')
        from dual
    </select>

    <insert id="uploadProduct" parameterType="product">
        insert into tbl_product (prod_key, prod_name, prod_price, prd_maker, prod_origin, prod_intro, prod_cnt,
                                 upload_date)
        values (#{prodKey},
                #{prodName},
                #{proPrice},
                #{prodMaker},
                #{prodOrigin},
                #{prod_intro},
                #{prod_cnt},
                sysdate)
    </insert>

    <insert id="uploadProdImg" parameterType="productImage">

    </insert>

</mapper>
